doctype html
html
  head
    meta(charset='utf-8')
    title
  body
    h2 All the cool sign up stuff goes here.
    form(action='/signup', ,='', method='post')
      input(type='text', placeholder='Email Address', name='email')
      input(type='text', placeholder='Password', name='password')
      input(type='text', placeholder='Confirm your password', name='passwordConfirmation')
      input(type='submit', value='Sign Up!')
    if(message)
      h2 #{message}
